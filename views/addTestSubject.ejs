<!doctype html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>ResearchSecure | Select Researcher</title>

  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">

  <!-- BOOTSTRAP CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">

  <!-- CUSTOM CSS -->
  <link rel="stylesheet" href="public/css/addTestSubject.css">
</head>

<body class="text-center">

<main class="form-add-participants">

  <form action="/addTestSubject" method="post">

    <h1 class="h3 mb-3 fw-normal">Select Participants</h1>

    <table id="testsubjects">

      <tr><th style="text-align: center;">Participant</th></tr>

      <% let counter = 1 %>
      <% participants.forEach(participant => { %>
        <tr>
           <td>
            <label><input type="checkbox" name="participants" value="<%=participant.fullName%>"><%=participant.fullName%></label>
           </td>
        </tr>
        <% counter++ %>
      <% }) %>

    </table>

    <button class="w-100 btn btn-lg btn-primary" id="submitBtnId" type="submit">Submit</button>
    <a type="button" href="/mainmenu" class="w-100 btn btn-lg btn-danger">Back</a>
    <p>Â© Copyright 2022 Kieran Arul</p>

  </form>

</main>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>

<!-- jQuery JS -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<!-- Custom JS -->
<script src="public/js/addTestSubject.js"></script>

</body>

</html>
