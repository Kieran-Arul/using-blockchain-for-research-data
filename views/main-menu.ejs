<!doctype html>
<html lang="en">

  <head>

    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;400;900&family=Ubuntu:wght@300;400;500;700&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="public/css/main-menu.css">

    <!-- Font Awesome Icons -->
    <script src="https://kit.fontawesome.com/aa03b46e77.js" crossorigin="anonymous"></script>

    <title>ResearchSecure | Main Menu</title>
  </head>

  <body>
    
    <!-- SECTION: TITLE -->
    <section class="coloured-section" id="title">

        <div class="container-fluid">

          <!-- Navbar -->
          <nav class="navbar navbar-expand-lg navbar-dark">
            
            <!-- Top-left icon - company name, which is NatWest -->
            <a class="navbar-brand" href="/mainmenu">ResearchSecure</a>
    
            <!-- Hamburger drop-down button when screen gets to small -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
            
            <!-- Navbar Items -->
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                
                <ul class="navbar-nav ms-auto">

                    <!-- Makes GET Request to the "/" route -->
                    <li class="nav-item">
                        <a class="nav-link" href="/mainmenu">Home</a>
                    </li>

                    <!-- Jumps to contact section -->
                    <li class="nav-item">
                      <a class="nav-link" href="#footer">Contact</a>
                    </li>
                    
                    <!-- Logs current user out (deauthenticates user) -->
                    <li class="nav-item">
                      <a class="nav-link" href="/logout">Log Out</a>
                    </li>
        
                </ul>
    
            </div>
    
          </nav>
    
          <!-- Title -->
          <div class="row">

            <div class="col-lg">
              <h1 class="big-heading">Main Menu</h1>

                <a type="button" class="btn btn-lg btn-success start-btn" href="#options">View Options</a>
              
            </div>

          </div>

        </div>
    
      </section>

        <section class="white-section" id="options">

            <div class="container-fluid">

                <h2 class="section-heading">Options</h2>

                <div class="row">

                    <% if (occupation === "Researcher") { %>

                        <div class="col-lg-2 rule-box">
                            <a href="/submitResearchQuestions"><i class="fas fa-briefcase fa-4x icon"></i></a>
                            <h3 class="rule-title">Submit Research Questions</h3>
                        </div>

                        <div class="col-lg-2 rule-box">
                            <a href="/selectQuestion"><i class="fas fa-book fa-4x icon"></i></a>
                            <h3 class="rule-title">View Data</h3>
                        </div>

                        <!-- Check that all participants have agreed to share // -->
                        <div class="col-lg-2 rule-box">
                            <a href="/downloadData"><i class="fas fa-hashtag fa-4x icon"></i></a>
                            <h3 class="rule-title">Share Data</h3>
                        </div>

                        <div class="col-lg-2 rule-box">
                            <a href="/addTestSubject"><i class="fas fa-taxi fa-4x icon"></i></a>
                            <h3 class="rule-title">Add Research Participants</h3>
                        </div>

                        <!-- Write endpoint for this // -->
                        <div class="col-lg-2 rule-box">
                            <a href="/addPeerReviewer"><i class="fas fa-taxi fa-4x icon"></i></a>
                            <h3 class="rule-title">Add Peer Reviewers</h3>
                        </div>

                        <!-- Write endpoint for this // -->
                        <div class="col-lg-2 rule-box">
                            <a href="/viewHash"><i class="fas fa-taxi fa-4x icon"></i></a>
                            <h3 class="rule-title">View Data Hash</h3>
                        </div>

                    <% } else if (occupation === "Test Subject") { %>

                        <!-- Automatically hash data and send to blockchain when all answered // -->
                        <div class="col-lg-6 rule-box">
                            <a href="/selectResearcher"><i class="fas fa-briefcase fa-4x icon"></i></a>
                            <h3 class="rule-title">Answer Research Questions</h3>
                        </div>

                        <!-- Write endpoint for this // -->
                        <div class="col-lg-6 rule-box">
                            <a href="/setSharingPreference"><i class="fas fa-briefcase fa-4x icon"></i></a>
                            <h3 class="rule-title">Set Data Sharing Preference</h3>
                        </div>

                    <% } else if (occupation === "Peer Reviewer") { %>

                        <!-- Write endpoint for this // -->
                        <div class="col-lg-6 rule-box ">
                            <a href="/verifyDataIntegrity"><i class="fas fa-hands-helping fa-4x icon"></i></a>
                            <h3 class="rule-title">Verify Data Integrity</h3>
                        </div>

                        <div class="col-lg-6 rule-box ">
                            <a href="/verifyDataPrivacy"><i class="fas fa-hands-helping fa-4x icon"></i></a>
                            <h3 class="rule-title">Verify Data Privacy</h3>
                        </div>

                    <% } %>

                </div>

            </div>

        </section>

      <!-- SECTION: CONTACT -->
    
      <footer class="coloured-section" id="footer">

        <div class="container-fluid">

            <!-- Footer Social Icons -->
            <a href="https://www.facebook.com/"><i class="fab fa-facebook-f social-icon"></i></a>
            <a href="https://www.twitter.com/"><i class="fab fa-twitter social-icon"></i></a>
            <a href="https://www.instagram.com/"><i class="fab fa-instagram social-icon"></i></a>
            <a href="https://www.gmail.com/"><i class="fas fa-envelope social-icon"></i></a>
            <p>Â© Copyright 2022 Kieran Arul</p>

        </div>
    
      </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
    
    <!-- jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    
    <!-- Custom JS -->
    <script src="public/js/main-menu.js"></script>

  </body>

</html>
